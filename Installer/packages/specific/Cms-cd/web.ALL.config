<?xml version="1.0"?>
<!--  
:::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::
Full documentation for CTT transforms http://msdn.microsoft.com/en-us/library/dd465326.aspx 
:::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::
-->
<configuration xmlns:xdt="http://schemas.microsoft.com/XML-Document-Transform">
  <appSettings xdt:Transform="InsertIfMissing">
    <add key="CC1.DeploymentToken" xdt:Locator="Match(key)" xdt:Transform="Remove" />
    <add key="CC1.DeploymentToken" value="{cms-deployment-token}" xdt:Transform="InsertIfMissing" xdt:Locator="Match(key)" />
  
    <add key="Environment" xdt:Transform="Remove" xdt:Locator="Match(key)"/>
    <add key="Environment" value="{environment_suffix}" xdt:Transform="InsertIfMissing" xdt:Locator="Match(key)"/>
    
    <add key="Hostname" xdt:Transform="Remove" xdt:Locator="Match(key)"/>
    <add key="Hostname" value="{cms-cd-hostname}" xdt:Transform="InsertIfMissing" xdt:Locator="Match(key)"/>
    
    <add key="Variation" xdt:Transform="Remove" xdt:Locator="Match(key)"/>
    <add key="Variation" value="cd" xdt:Transform="InsertIfMissing" xdt:Locator="Match(key)"/>
    
    <add key="Composer.GTMContainerId" xdt:Transform="Remove" xdt:Locator="Match(key)"/>
    <add key="Composer.GTMContainerId" value="{gtm-containerid}" xdt:Transform="Insert" xdt:Locator="Match(key)"/>
    
    <add key="InsertCacheInfoInPageSource" xdt:Transform="Remove" xdt:Locator="Match(key)"/>
    <add key="InsertCacheInfoInPageSource" value="false" xdt:Transform="Insert" xdt:Locator="Match(key)"/>
  </appSettings>

  
  <system.web>
    <httpHandlers>
	    <!-- Sitemap configuration - Remove the web handlers, so that the sitemap.xml on the server is being used -->
		<add path="sitemap.xml" xdt:Transform="Remove" xdt:Locator="Match(path)"/>
	</httpHandlers>
  </system.web>


  <system.webServer>
  
  <!-- Sitemap configuration - Remove the web handlers, so that the sitemap.xml on the server is being used -->
    <handlers>
      <add name="SiteMap" xdt:Transform="Remove" xdt:Locator="Match(name)"/>
    </handlers>
  
    <staticContent>
      <mimeMap fileExtension=".webmanifest" mimeType="application/manifest+json" xdt:Transform="InsertIfMissing" xdt:Locator="Match(fileExtension)"/>
    </staticContent>
  
    <rewrite xdt:Transform="InsertIfMissing">
      <rules xdt:Transform="InsertIfMissing">
        <rule name="HTTP/S to HTTPS Redirect" xdt:Transform="Remove" xdt:Locator="Match(name)" />
        
        <rule name="HTTP/S to HTTPS Redirect" enabled="true" stopProcessing="true" xdt:Transform="InsertIfMissing">
          <match url="(.*)" />
          <conditions>
            <add input="{HTTPS}" pattern="off" ignoreCase="true" />
          </conditions>
          <action type="Redirect" url="https://{HTTP_HOST}{REQUEST_URI}" redirectType="Permanent" />
        </rule> 
      </rules>
    </rewrite>
  </system.webServer>

  <system.web>
    <machineKey validationKey='{machineKey-validationKey}' decryptionKey='{machineKey-decryptionKey}' validation='SHA1' xdt:Transform="InsertIfMissing"/>
  </system.web>

</configuration>