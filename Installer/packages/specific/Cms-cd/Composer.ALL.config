<?xml version="1.0"?>
<!--  
:::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::
Full documentation for CTT transforms http://msdn.microsoft.com/en-us/library/dd465326.aspx 
:::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::
-->
<transforms xmlns:xdt="http://schemas.microsoft.com/XML-Document-Transform">
	<SetAttributeValueTransform
	    url="https://{ocs-cd-hostName}/api"
	    authToken="{ocsAuthToken}"
	    xdt:Transform="SetAttributes(url, authToken)"
	    xdt:Locator="XPath(/settings/overture)" />
	
	<SetAttributeValueTransform
		xdt:Transform="Remove"
	    xdt:Locator="XPath(/settings/sitemap)" />
		
</transforms>
