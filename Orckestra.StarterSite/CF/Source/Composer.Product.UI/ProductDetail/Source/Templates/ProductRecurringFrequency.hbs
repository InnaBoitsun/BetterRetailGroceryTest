<div data-templateid="ProductRecurringFrequency">
    {{#if isAvailableForRecurring}}
        <div class="form-group col-xs-12  col-sm-11  col-md-10" >
            <div class="content">
                <div id="recurringModes" class="form-group">
                    <div class="radio">
                        <input id="UseSingle" {{#if_eq recurringMode "single"}}checked="checked"{{/if_eq}} type="radio" data-target=".modeSelection"
                               name="recurringMode"
                               value="single"
                               data-oc-change="changeRecurringMode"  />
                        <label for="UseSingle">{{localize 'ProductPage' 'L_RecurringFrequencyOnce'}}</label>
                    </div>
                    <div class="radio">
                        <input  id="UseRecurring" {{#if_eq recurringMode "recurring"}}checked="checked"{{/if_eq}}
                                type="radio"
                                data-target=".modeSelection"
                                name="recurringMode"
                                value="recurring"
                                data-oc-change="changeRecurringMode"  />
                        <label for="UseRecurring">
                            <img src="/UI.Package/Images/recurring.png" alt="{{localize 'General' 'L_RecurringProduct'}}" title="{{localize 'General' 'L_RecurringProduct'}}" /> {{localizeFormat 'ProductPage' 'L_RecurringPitch' (localize 'ProductPage' 'L_RecurringSaveRate') }}
                        </label>
                    </div>
                    <div class="row">
                        <div class="col-xs-11  col-xs-push-1  collapse  {{#if_eq recurringMode "recurring"}}in{{/if_eq}}  modeSelection">
                            <h2 class="h6">
                                {{localize 'ProductPage' 'L_RecurringDeliveryFrequency'}}
                                <button class="btn-link" role="button" data-trigger="click" data-toggle="popover" data-placement="top" title=""
                                        data-content="{{{recurringBubblePitch}}}" data-html="true" data-original-title="{{localize 'ProductPage' 'L_RecurringBubblePitchTitle'}}">
                                    <span class="glyphicon glyphicon-question-sign"></span>
                                </button>
                            </h2>
                            <div class="row">
                                <div class="col-xs-8   col-md-7 form-group">
                                    <select id="recurringOrderFrequencyNameSelect" class="recurring-orders-frequency-selection form-control" data-oc-change="onRecurringOrderFrequencySelectChanged">
                                        {{#each availableFrequencies}}
                                            <option
                                                    value="{{this.recurringOrderFrequencyName}}"
                                                    {{#if_eq this.recurringOrderFrequencyName ../selectedRecurringOrderFrequencyName}}selected="selected"{{/if_eq}}>
                                                {{this.displayName}}
                                            </option>
                                        {{/each}}
                                    </select>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    {{/if}}
</div>
