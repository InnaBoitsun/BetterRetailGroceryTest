<div data-templateid="CompatOrderDetail" class="compact-order">
    <div class="row">
        <div class="col-xs-8"><strong>{{localizeFormat 'MyAccount' 'L_OrderedOn' OrderInfos.OrderDate}}</strong></div>
        <div class="col-xs-4 text-right"><a href="{{Url}}" class="cta">{{ localize 'MyAccount' 'H_OrderDetail' }}</a></div>
    </div>
    <hr />
    <div class="row">
        <div class="col-xs-8">
            {{localizeFormat 'MyAccount' 'L_OrderNumber' OrderInfos.OrderNumber}}
            {{#if ShipmentSummaries.[0].ScheduledShipDate}}
                <br />{{localizeFormat 'MyAccount' 'L_ScheduledShipping' ShipmentSummaries.[0].ScheduledShipDate}}
            {{/if}}
            {{#if ShipmentSummaries.[0].TrackingInfo.Url }}
                <br /><a href="{{ShipmentSummaries.[0].TrackingInfo.Url}}">{{ localize 'MyAccount' 'H_OrderTracking' }}</a>
            {{/if}}
            <br/><span class="compact-order-status text-gray">{{ OrderInfos.OrderStatus }}</span>
        </div>
        <div class="col-xs-4 text-right">Total: <strong class="h4">{{OrderInfos.PricePaid}}</strong></div>
    </div>
</div>